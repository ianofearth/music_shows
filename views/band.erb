<h1><%= @band.name() %></h1>

<h3>Select all venues this band has appeared in:</h3>

<% if @venues.any?() %>
	<form action="/bands/<%= @band.id %>" method="post">
		<input type="hidden" name="_method" value="patch">
		<% @vanues.each() do |venue| %>
		<div class="checkbox">
        <label>
          <input type="checkbox" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.name() %>
        </label>
      </div>
    <% end %>

    <button type="submit">Add venues</button>
  </form>
<% end %>


<% if @band.venues().any?() %>
  <h3>Here are all the venues the band has played:</h3>

  <ul>
    <% @band.venues().each() do |venue| %>
      <li><%= venue.name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no venues yet!</p>
<% end %>


